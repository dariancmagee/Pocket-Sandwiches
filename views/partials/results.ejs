<h1>Search Results:</h1>

<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/stylesheets/style.css">

<div class="container">
<% listOfRestaurants.forEach((restaurant) => { %>
  <div>  <p><%= restaurant.name %></p>
    <img class="image" src="<%= restaurant.image_url %>" alt="Img goes here"></img>
    <p><%= restaurant.location["display_address"] %></p>
    <p><a href="<%= restaurant.url %>" class="btn btn-info" role="button">Go to  <%= restaurant.name %>'s Website</a></p>
    </div>
<% }); %>
</div>

<style>
    .image {
        max-height: 150px;
        max-width: auto;
    }

    p {
        font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    }

    .container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        margin-right: 25px;
        margin-bottom: 25px;
        align-items: center;
    }
</style>